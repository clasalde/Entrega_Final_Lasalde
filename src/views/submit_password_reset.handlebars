<div class="authPage">
  <div class="authContainer">
    <form class="authCard" action="/api/auth/reset-password/" method="POST">
      <div class="authTitle">Reset password form</div>

      <label for="email">Email:</label>
      <input class="input" type="email" id="email" name="email" required />
      <label for="token">Confirmation code:</label>
      <input class="input" type="text" id="token" name="token" required />
      <label for="password">New password:</label>
      <input
        class="input"
        type="password"
        id="password"
        name="password"
        required
      />
      <button class="button" type="submit">Restablecer Contrase√±a</button>
    </form>
  </div>
</div>

{{#if error}}
  <p class="error-message">{{error}}</p>
{{/if}}

